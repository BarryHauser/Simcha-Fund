@using SimchaFund.Data
@using SimchaFund.Models
@model SimchaIndexViewModel


<div class="container">
    <div id="simchas-index">

        <div class="header text-center">
            <h1>Simchas</h1>
        </div>

        <div class="row header">
            <div class="col-md-4">
                <button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="text-align:center;vertical-align:middle;">Contributions</th>
                    <th style="text-align:center;vertical-align:middle;">Simcha Name</th>
                    <th style="text-align:center;vertical-align:middle;">Contributor Count</th>
                    <th style="text-align:center;vertical-align:middle;">Total</th>
                    <th style="text-align:center;vertical-align:middle;">Date</th>
                    <th style="text-align:center;vertical-align:middle;">Actions</th>
                </tr>
                @foreach (Simcha simcha in Model.Simchas)
                {
                <tr>
                    <td style="text-align:center;vertical-align:middle;">
                        <a class="btn btn-primary" href="/simcha/contributions?id=@simcha.Id">Contributions</a>
                    </td>
                    <td style="text-align:center;vertical-align:middle;">@simcha.Name</td>

                    <td style="text-align:center;vertical-align:middle;">@simcha.Contributers/@simcha.TotalPll</td>
                    <td style="text-align:center;vertical-align:middle;">@simcha.Money.ToString("C")</td>
                    <td style="text-align:center;vertical-align:middle;">@simcha.Date.ToShortDateString()</td>
                    <td style="text-align:center;vertical-align:middle;">
                        <a class="btn btn-danger" href="/simchas/45/email">Email Organizer</a>
                    </td>
                </tr>
                }

            </table>
        </div>
  </div>      
</div>

 


<div class="modal fade" id="simcha-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form class="form" action="/simcha/newSimcha" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">New Simcha</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Simcha Name</label>
                        <input class="form-control" id="simcha_name" name="name" placeholder="Simcha Name" type="text">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" name="date" class="form-control" id="datepicker">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input class="btn btn-primary" name="commit" type="submit" value="Save">
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts{
    <script src="~/Scripts/simcha-index.js"></script>
    }