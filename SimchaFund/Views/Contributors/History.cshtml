@using SimchaFund.Data
@using SimchaFund.Models
@model HistoryVM

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2 class="col-md-offset-2">History for @Model.Name</h2>
        <h2 class="col-md-offset-2">Current Balance: @Model.Balance.ToString("C")</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            @foreach (Trancaction t in Model.Trancactions)
            {
                <tr>
                    <td>@t.Action</td>
                    <td>@t.Date.ToLongDateString()</td>
                    <td>@t.Amount.ToString("C")</td>
                </tr>
            }

        </table>

    </div>
</div>

